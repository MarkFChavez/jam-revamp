
= div_for member, class:"member-block" do
	%div.pull-left
		= g(member, 'img-circle', size:96)
	%div{style:"margin-left:120px"}
		%div
			%div.pull-right
				%ul.nav.nav-pills
					%li= link_to "Edit", edit_member_path(member), class:"btn btn-warning btn-small" 
					%li= link_to "Remove", member, method: :delete, class:"btn btn-danger btn-small", confirm:"Remove #{member.name}?"
			%p{style:"font-size:20px"}
				%b= member.name
				= "(#{member.email})"
		%div.top20
			%p{style:"text-align:justify"}
				= member.description
		%div.top20
			%div.pull-left
				%ul.nav.nav-pills
					%li= link_to "Add new project", new_member_project_path(member), class:"btn btn-success btn-small" 
					%li= link_to "Add new skill", new_member_skill_path(member), class:"btn btn-inverse btn-small" 
					%li= link_to "Add new social info", new_member_social_link_path(member), class:"btn btn-info btn-small" 

			%div.pull-right
				%ul.nav.nav-pills
					%li= link_to "Go to My Settings".html_safe, member, class:"btn btn-small" 
		%div.clearfix